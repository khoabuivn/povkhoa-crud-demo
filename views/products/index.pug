extends ../layouts/common

block content
  nav(aria-label='Page navigation example')
  ul.pagination.justify-content-center
    li.page-item
      a.page-link(href='?page=' + --i, aria-label='Previous')
        span(aria-hidden='true') &laquo;
    if i < limit
      li.page-item
        a.page-link(href='?page=' + i)
          span= i
      - ++i
      li.page-item
        a.page-link(href='?page=' + i)
          span= i
      li.page-item
        .page-link ...
      li.page-item
        a.page-link(href='?page=' + limit)
          span= limit
    li.page-item
      a.page-link(href='?page=' + ++i, aria-label='Next')
        span(aria-hidden='true') &raquo;

  if products
    .container
      .row
        each product in products
          .col-sm-6.col-md-4.col-xs-3
            .card(style='width: 18rem;')
              img.card-img-top(src= product.image, alt='...')
              .card-body
                h5.card-title
                  span= product.name
                p.card-text
                  span= product.description
                a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
