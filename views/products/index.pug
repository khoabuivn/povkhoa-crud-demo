extends ../layouts/common

block content
  if products
    .container
      .row
        each product in products
          .col-4
            .card(style='width: 18rem;')
              img.card-img-top(src= product.image, alt='...')
              .card-body
                h5.card-title
                  span= product.name
                p.card-text
                  span= product.description
                a.btn.btn-primary(href='#') Add to cart
